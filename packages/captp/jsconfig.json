{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "checkJs": true,
    "noEmit": true,
/*
    // The following flags are for creating .d.ts files:
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
*/
    "downlevelIteration": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ]
  },
  "include": ["*.js", "*.ts", "src/**/*.js", "src/**/*.ts"]
}
